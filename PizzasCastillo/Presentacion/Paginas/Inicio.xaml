<Page x:Class="Presentacion.Paginas.Inicio"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Presentacion.Paginas"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Height="Auto" Width="Auto"
      Title="Inicio">

    <Grid Background="{StaticResource AzulCastilloLight}">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="BIENVENIDO AL SISTEMA DE 'PIZZAS CASTILLO'" Style="{StaticResource TituloStyle}" HorizontalAlignment="Center"/>
            <TextBlock Text="SELECCIONA UNA OPCIÓN DEL MENÚ SUPERIOR" Style="{StaticResource TituloCamposStyle}" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
