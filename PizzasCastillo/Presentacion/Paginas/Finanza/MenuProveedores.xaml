<Page x:Class="Presentacion.Paginas.Finanza.MenuProveedores"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Presentacion.Paginas.Finanza"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuProveedores">

    <Grid Background="{StaticResource AzulCastilloLight}">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Seleccione una de las opciones " Style="{StaticResource TituloCamposStyle}" HorizontalAlignment="Center" Margin="300,-100,299,0" FontSize="30"/>
        </StackPanel>
        <Grid Margin="340,200,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                <Button Style="{StaticResource BotonSecundarioStyle}" Content="Registrar Proveedor" Width="200" Click="RegistroProveedor"  Margin="0,0,0,0" AutomationProperties.AutomationId="RegistrarProveedor"/>
                <Button Style="{StaticResource BotonSecundarioStyle}" Content="Lista de Proveedores" Width="200" Margin="200,0,0,0" Click="ListaProveedor" AutomationProperties.AutomationId="ListadeProveedores" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
