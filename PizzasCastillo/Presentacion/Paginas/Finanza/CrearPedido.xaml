<Page x:Class="Presentacion.Paginas.Finanza.CrearPedido"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Presentacion.Paginas.Finanza"
      mc:Ignorable="d" 
      d:DesignHeight="450" Width="auto" Height="auto" d:DesignWidth="800" Background="White"
      Title="CrearPedido">

    <StackPanel>
        <Image HorizontalAlignment="Center" Width="300" Height="auto"/>
        <ComboBox HorizontalAlignment="Center" Width="120">
            <ComboBoxItem IsSelected="True">Item #1</ComboBoxItem>
            <ComboBoxItem>Item #2</ComboBoxItem>
            <ComboBoxItem>Item #3</ComboBoxItem>
        </ComboBox>

        <Button HorizontalAlignment="Right" Style="{StaticResource BotonPrincipalStyle}" Content="Confirmar" Margin="0,0,10,0" Click="ClickConfirmar"/>
        <Button HorizontalAlignment="Right" Style="{StaticResource BotonSecundarioStyle}" Content="Cancelar" Margin="0,10,10,0" Click="ClickCancelar"/>

    </StackPanel>
</Page>
