<Page x:Class="Presentacion.Paginas.Cocina.MenuPlatillos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Presentacion.Paginas.Cocina"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPlatillos">

    <Grid Background="{StaticResource AzulCastilloLight}">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Selecciona una opción " Style="{StaticResource TituloCamposStyle}" HorizontalAlignment="Center" Margin="300,-150,299,0" FontSize="50"/>
        </StackPanel>
        <Grid Margin="240,250,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                <Button Style="{StaticResource BotonSecundarioStyle}" Content="Revisar Platillos" Width="300" Height="60"  Click="RevisarPlatillos"  Margin="0,0,0,0"/>
                <Button Style="{StaticResource BotonSecundarioStyle}" Content="Registrar Platillo" Width="300" Height="60" Margin="200,0,0,0" Click="RegistrarPlatillo" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
