<Page x:Class="Presentacion.Paginas.Cocina.RecetaArticulo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Presentacion.Paginas.Cocina"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RecetaArticulo">

    <Grid Background="{StaticResource AzulCastilloLight}">
        <TextBlock Text="Receta del articulo" Style="{StaticResource TituloPaginasStyle}" Margin="80,30,0,0"/>
        <TextBox x:Name="recetaText" Style="{StaticResource InputDefaultStyle}" TextWrapping="Wrap" Height="400" Width="1000"  VerticalAlignment="Top"
                         AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,100,0,0" IsEnabled="False" FontSize="20"/>
        <Button Style="{StaticResource BotonPrincipalStyle}" Content="Regresar" Width="200" Margin="0,450,0,0" Click="Regresar" />
    </Grid>
</Page>
