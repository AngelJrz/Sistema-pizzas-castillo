<Page x:Class="Presentacion.Paginas.Cocina.MenuMerma"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Presentacion.Paginas.Cocina"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuMerma">

    <Grid Background="{StaticResource AzulCastilloLight}">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Seleccione el tipo de merma a generar " Style="{StaticResource TituloCamposStyle}" HorizontalAlignment="Center" Margin="300,-100,299,0" FontSize="30"/>
        </StackPanel>
        <Grid Margin="340,200,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                <Button Style="{StaticResource BotonSecundarioStyle}" Content="Merma de Pedido" Width="200" Click="MermaPedido"  Margin="0,0,0,0"/>
                <Button Style="{StaticResource BotonSecundarioStyle}" Content="Merma de Insumos" Width="200" Margin="200,0,0,0" Click="MermaInsumo" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
