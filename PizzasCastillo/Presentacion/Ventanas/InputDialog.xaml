<Window x:Class="Presentacion.Ventanas.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion.Ventanas"
        mc:Ignorable="d"
        Title="Informacion" Height="180" Width="250" WindowStartupLocation="CenterScreen">
    <StackPanel Width="180">
        <TextBlock Text="Ingresa el nuevo nombre" Margin="0,20,0,0" VerticalAlignment="Center"/>
        <TextBox x:Name="respuesta" Margin="0,10,0,0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="OK" Click="OKButton_Click" Margin="0,15,0,0"/>
            <Button Content="Cancelar" Click="CancelButton_Click" Margin="20,15,0,0"/>
        </StackPanel>
    </StackPanel>
</Window>
